---
import RecruitersLayout from "@layouts/RecruitersLayout.astro";
import { type CollectionEntry, getCollection } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("recruiters");
  return (
    posts?.map((post) => ({
      params: { slug: post.slug },
      props: post,
    })) || []
  );
}
type Props = CollectionEntry<"recruiters">;

const post = Astro.props;
const { Content } = await post.render();
---

<RecruitersLayout>
  <Content />
</RecruitersLayout>